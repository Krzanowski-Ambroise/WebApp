@model WebApp.Models.UserCompanyAssociationViewModel

<h1>Attribuer une entreprise à l'utilisateur</h1>

<form asp-action="AddCompany" method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        <label asp-for="CompanyId" class="control-label"></label>
        <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
    </div>

    <div class="form-group">
        <input type="submit" value="Ajouter" class="btn btn-primary" />
    </div>
</form>
