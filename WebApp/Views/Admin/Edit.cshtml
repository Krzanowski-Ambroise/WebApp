@model (WebApp.Areas.Identity.Data.ApplicationUser User, IList<string> Roles)

<h2>Modifier l'utilisateur</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="User.FirstName"></label>
        <input asp-for="User.FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="User.LastName"></label>
        <input asp-for="User.LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="User.Email"></label>
        <input asp-for="User.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="User.UserName"></label>
        <input asp-for="User.UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="User.Street"></label>
        <input asp-for="User.Street" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="User.City"></label>
        <input asp-for="User.City" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="User.Postcode"></label>
        <input asp-for="User.Postcode" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="User.DateOfBirth"></label>
        <input asp-for="User.DateOfBirth" type="date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Enregistrer</button>
    <a asp-action="ListUser" class="btn btn-secondary">Annuler</a>
</form>
