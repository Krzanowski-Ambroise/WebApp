@model IEnumerable<WebApp.Models.TCompany>

@{
    ViewData["Title"] = "Liste des entreprises";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center my-4">Liste des entreprises</h1>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
    <tr>
        <th>@Html.DisplayNameFor(model => model.CompanieName)</th>
        <th>@Html.DisplayNameFor(model => model.Siret)</th>
        <th>@Html.DisplayNameFor(model => model.Description)</th>
        <th>@Html.DisplayNameFor(model => model.CreationDate)</th>
        <th>@Html.DisplayNameFor(model => model.Phone)</th>
        <th>@Html.DisplayNameFor(model => model.Website)</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.CompanieName)</td>
            <td>@Html.DisplayFor(modelItem => item.Siret)</td>
            <td>@Html.DisplayFor(modelItem => item.Description)</td>
            <td>@Html.DisplayFor(modelItem => item.CreationDate)</td>
            <td>@Html.DisplayFor(modelItem => item.Phone)</td>
            <td>@Html.DisplayFor(modelItem => item.Website)</td>
            <td class="text-center">
                <a asp-action="ListDetails" asp-route-id="@item.Id" class="btn btn-info btn-sm">Détails</a>
            </td>
        </tr>
    }
    </tbody>
</table>